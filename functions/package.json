    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/functions-emulator": "^1.0.0-beta.4",
    "express": "^4.16.3",
    "firebase-admin": "^5.11.0",
    "firebase-functions": "^0.8.2",
    "global": "^4.3.2",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "private": true
}
